{
  "name": "hey",
  "version": "1.0.0",
  "description": "A simple aplication to send notifications",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon",
    "start": "cd ./dist && npm run start",
    "lint": "eslint --fix \"**/*.ts\"",
    "build": "rimraf ./dist && npm run lint && tsc",
    "db:generate": "npx prisma generate",
    "db:migration-generate": "npx prisma migrate dev --name",
    "db:migration": "npx prisma migrate dev",
    "db:update": "npm run db:migration && npm run db:generate"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "http-status": "^1.5.3",
    "morgan": "^1.10.0",
    "socket.io": "^4.5.3",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.5.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
